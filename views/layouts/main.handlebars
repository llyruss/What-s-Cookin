  <link rel="stylesheet" href="/css/style.css">
  <title>What's Cookin</title>

<body>

  <div class="col-12 col-md-10 mb-3 p-3 bg-white rounded">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">What's Cookin</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#dark-nav"
        aria-controls="dark-nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="dark-nav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/recipes">Recipes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/create">Create recipe</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Sign up</a>
          </li>
          {{#if logged_in}}
          <li id="logout" class="logout nav-item">
              <a class="nav-link" href="#" tabindex="-1" aria-disabled="true">Log Out</a>
          </li>
          {{else}}
          <li class="nav-item">
            <a class="nav-link" href="/login" tabindex="-1" aria-disabled="true">Login</a>
            {{/if}}
          </li>
        </ul>
      </div>
    </nav>
  </div>
  {{{body}}}
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
